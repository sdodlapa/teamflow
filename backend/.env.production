# üåê Railway Production Deployment Configuration

# Database Configuration
DATABASE_URL=${{Railway.PGUSER}}:${{Railway.PGPASSWORD}}@${{Railway.PGHOST}}:${{Railway.PGPORT}}/${{Railway.PGDATABASE}}
DATABASE_URL_ASYNC=postgresql+asyncpg://${{Railway.PGUSER}}:${{Railway.PGPASSWORD}}@${{Railway.PGHOST}}:${{Railway.PGPORT}}/${{Railway.PGDATABASE}}

# Application Configuration  
SECRET_KEY=${{Railway.SECRET_KEY}}
JWT_SECRET_KEY=${{Railway.JWT_SECRET_KEY}}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=production
DEBUG=false
TESTING=false

# Security
ALLOWED_HOSTS=teamflow-api-production.up.railway.app,api.teamflow.app,teamflow.app
CORS_ORIGINS=["https://teamflow.app", "https://www.teamflow.app", "https://teamflow.vercel.app"]

# Performance
WORKERS=4
MAX_DB_CONNECTIONS=20
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Features
ENABLE_SWAGGER=false
ENABLE_METRICS=true
ENABLE_TEMPLATE_SYSTEM=true

# Monitoring
LOG_LEVEL=INFO
SENTRY_DSN=${{Railway.SENTRY_DSN}}

# File Storage (Railway Volume or AWS S3)
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=10485760

# Redis (Optional - Railway Redis addon)
REDIS_URL=${{Railway.REDIS_URL}}

# External APIs
OPENAI_API_KEY=${{Railway.OPENAI_API_KEY}}

# Deployment
PORT=8000
HOST=0.0.0.0